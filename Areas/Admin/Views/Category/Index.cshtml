@model IEnumerable<MediumClone.Areas.Admin.Models.Category>
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<a class="btn btn-success mb-3" href="/admin/category/create">Create New Category</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/admin/category/details/@category.Id">View</a>
                    <a class="btn btn-danger btn-sm" href="/admin/category/delete/@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
