@model MediumClone.Models.Post
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Post";
}
<h2>Delete Post</h2>
<div class="alert alert-danger">Are you sure you want to delete this post?</div>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>
</dl>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/admin/post" class="btn btn-secondary">Cancel</a>
</form>
