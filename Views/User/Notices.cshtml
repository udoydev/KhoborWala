@model IEnumerable<MediumClone.Models.Notice>
@{
    ViewData["Title"] = "Your Notifications";
}
<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4 text-center">Your Notifications</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle" style="font-size: 2rem;"></i><br />
            You have no notifications.
        </div>
    }
    else
    {
        <ul class="list-group">
            @foreach (var notice in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@notice.Message</span>
                    <span class="text-muted" style="font-size: 0.9rem;">@notice.CreatedAt.ToString("g")</span>
                </li>
            }
        </ul>
    }
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
